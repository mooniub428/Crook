<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/category_item_layout">

    <android.support.v7.widget.CardView
        android:id="@+id/category_cardview"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/category_thumb"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <TextView
                android:id="@+id/category_name"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/category_thumb"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="category"/>

            <TextView
                android:id="@+id/category_desc"
                android:layout_below="@id/category_name"
                android:layout_toEndOf="@id/category_thumb"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The best cleaner for home use blablablablablabla"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>